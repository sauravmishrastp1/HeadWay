<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_above="@id/submit_datafile"
    android:layout_height="wrap_content">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarservice">


            <ImageView
                android:id="@+id/dp"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:src="@drawable/headwaygmslogo"/>
            <TextView
                android:id="@+id/basicinfo"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Upload Documnet"/>




            <Spinner
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_background"
                android:hint="Department"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textColorHint="@color/colorAccent" />


            <TextView
                android:id="@+id/ModuleNam"
                android:textAlignment="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Basic Information"/>
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/relative"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    android:id="@+id/radiobutoon"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="CDA Channel"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/radiobutoon"
                    android:layout_height="wrap_content" />
            </RelativeLayout>>



            <TextView
                android:layout_width="wrap_content"
                android:text="Upload Document"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/divider45"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider" />


            <Spinner
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_background"
                android:hint="Department"
                android:visibility="gone"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textColorHint="@color/colorAccent" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pic"
                android:layout_marginStart="16dp"
                android:text="upload pic"
                android:visibility="gone"
                android:textSize="17dp"
                android:layout_toRightOf="@id/pickdoc"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:visibility="gone"
                android:id="@+id/pickdoc"
                android:src="@drawable/profileimageicon"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="100dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/pancard"
                    android:layout_marginStart="16dp"
                    android:text="upload Pancard *"
                    android:layout_toRightOf="@id/pandoc"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:layout_marginTop="50dp"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/pandoc"
                    android:src="@drawable/unnamed"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="100dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/cheque"
                    android:layout_marginStart="16dp"
                    android:text="upload cheque *"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/chequdoc"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:layout_marginEnd="16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/chequdoc"
                   android:src="@drawable/cheque"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="100dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/adhar"
                    android:layout_marginStart="16dp"
                    android:text="upload aadhaar"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:layout_toRightOf="@id/adhardoc"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/adhardoc"
                    android:visibility="gone"
                     android:src="@drawable/adhar"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="100dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/signature"
                    android:layout_marginStart="16dp"
                    android:text="upload Signature"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:layout_toRightOf="@id/sign"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/sign"
                    android:src="@drawable/sigature"
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="100dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/other"
                    android:layout_marginStart="16dp"
                    android:text="upload Other documnet"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/otherdoc"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/otherdoc"
                    android:visibility="gone"
                    android:src="@drawable/other"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="100dp"/>
            </RelativeLayout>


        </LinearLayout>
</ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_textview"
        app:layout_constraintVertical_bias="0.06999999" />

    <Button
        android:id="@+id/submit_datafile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"/>


</RelativeLayout>